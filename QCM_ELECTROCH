    let currentIndex = 0;
    let score = 0;
    let answered = false;

    const quizContainer = document.getElementById("quizContainer");
    const progressFill = document.getElementById("progressFill");

    function renderQuestion() {
      const q = questions[currentIndex];
      answered = false;

      const percent = ((currentIndex) / questions.length) * 100;
      progressFill.style.width = `${percent}%`;

      quizContainer.innerHTML = `
        <div class="question-card">
          <div class="question-meta">
            <span>Question ${currentIndex + 1} / ${questions.length}</span>
            <span>Niveau : IUT / licence</span>
          </div>
          <div class="question-text">${q.text}</div>
          <div class="options">
            ${q.options
              .map(
                (opt, i) => `
              <button class="option" data-index="${i}">
                <span class="option-prefix">${String.fromCharCode(65 + i)}</span>
                <span>${opt}</span>
              </button>
            `
              )
              .join("")}
          </div>
          <div id="feedback"></div>
          <div class="controls">
            <div class="score">
              Score actuel : <strong>${score}</strong> / ${questions.length}
            </div>
            <div>
              <button class="btn-secondary" id="resetBtn">R√©initialiser</button>
              <button class="btn-primary" id="nextBtn">
                ${currentIndex === questions.length - 1 ? "Voir le bilan" : "Question suivante"}
              </button>
            </div>
          </div>
        </div>
      `;

      document.querySelectorAll(".option").forEach((btn) => {
        btn.addEventListener("click", onOptionClick);
      });

      document.getElementById("nextBtn").addEventListener("click", onNext);
      document.getElementById("resetBtn").addEventListener("click", onReset);
    }

    function onOptionClick(e) {
      if (answered) return;
      const btn = e.currentTarget;
      const selectedIndex = parseInt(btn.getAttribute("data-index"));
      const q = questions[currentIndex];
      const feedbackDiv = document.getElementById("feedback");
      const optionButtons = document.querySelectorAll(".option");

      answered = true;

      optionButtons.forEach((b) => b.classList.remove("selected", "correct", "incorrect"));
      btn.classList.add("selected");

      if (selectedIndex === q.correct) {
        score++;
        btn.classList.add("correct");
        feedbackDiv.innerHTML = `
          <div class="feedback correct">
            <div class="feedback-icon">‚úî</div>
            <div>
              <strong>Correct !</strong><br/>
              ${q.explanation}
            </div>
          </div>
        `;
      } else {
        btn.classList.add("incorrect");
        optionButtons[q.correct].classList.add("correct");
        feedbackDiv.innerHTML = `
          <div class="feedback incorrect">
            <div class="feedback-icon">‚úñ</div>
            <div>
              <strong>Incorrect.</strong><br/>
              ${q.explanation}
            </div>
          </div>
        `;
      }

      // Mise √† jour du score affich√©
      document.querySelector(".score").innerHTML =
        'Score actuel : <strong>' + score + "</strong> / " + questions.length;
    }

    function onNext() {
      if (!answered && currentIndex < questions.length) {
        // Optionnel : obliger √† r√©pondre avant de continuer
        alert("R√©ponds d‚Äôabord √† la question üôÇ");
        return;
      }

      if (currentIndex < questions.length - 1) {
        currentIndex++;
        renderQuestion();
      } else {
        showSummary();
      }
    }

    function onReset() {
      if (!confirm("R√©initialiser le QCM et recommencer depuis le d√©but ?")) return;
      currentIndex = 0;
      score = 0;
      renderQuestion();
    }

    function showSummary() {
      progressFill.style.width = "100%";
      const percent = Math.round((score / questions.length) * 100);

      let appreciation = "Bon d√©but, revois les notions cl√©s.";
      if (percent >= 80) appreciation = "Excellent, tu ma√Ætrises tr√®s bien le chapitre ‚úÖ";
      else if (percent >= 60) appreciation = "Pas mal, quelques points √† consolider üí™";
      else if (percent >= 40) appreciation = "Encore du travail, mais tu es sur la bonne voie üìö";

      quizContainer.innerHTML = `
        <div class="question-card">
          <div class="question-text">Bilan de ton QCM</div>
          <div class="summary">
            Score final : <span class="summary-highlight">${score} / ${
        questions.length
      }</span> (${percent} %)<br/>
            ${appreciation}
          </div>
          <div class="controls" style="margin-top:16px;">
            <div class="score">Tu peux recommencer pour t‚Äôam√©liorer.</div>
            <button class="btn-primary" id="restartBtn">Recommencer le QCM</button>
          </div>
        </div>
      `;

      document.getElementById("restartBtn").addEventListener("click", () => {
        currentIndex = 0;
        score = 0;
        renderQuestion();
      });
    }

    // Initialisation
    renderQuestion();
  </script>
</body>
</html>
